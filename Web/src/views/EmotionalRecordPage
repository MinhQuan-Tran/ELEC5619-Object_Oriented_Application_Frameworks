<template>
  <div class="emotion-recorder-container">
    <h1>Emotional Recorder</h1>
    <textarea v-model="emotion" placeholder="record your emotion here"></textarea>
    <button @click="submitEmotion">Submit</button>
  </div>
</template>

<script lang="ts">
import { ref } from 'vue';
import { useStore } from 'vuex';

export default {
  name: 'EmotionRecorder',
  setup() {
    const store = useStore();
    const emotion = ref('');

    const submitEmotion = async () => {
      try {
        // Fetch current user's ID from the store
        const userId = store.state.user.user_id;

        // Call the backend API to save the emotion
        const response = await fetch('/api/emotion', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            userId: userId,
            emotion: emotion.value,
          }),
        });

        const data = await response.json();
        if (data.success) {
          alert('Emotion recorded successfully!');
          emotion.value = ''; // Reset the input
        } else {
          alert('Error recording emotion: ' + data.message);
        }
      } catch (error) {
        console.error('Error recording emotion:', error);
        alert('An error occurred. Please try again.');
      }
    };

    return {
      emotion,
      submitEmotion,
    };
  },
};
</script>

<style scoped>
.emotion-recorder-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20px;
}

textarea {
  width: 300px;
  height: 150px;
}
</style>